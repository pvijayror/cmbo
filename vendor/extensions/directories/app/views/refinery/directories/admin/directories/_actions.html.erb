<ul>
  <% if ::Refinery::Directories::Admin::DirectoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.directories_admin_directories_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_directories_admin_directory_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Directories::Admin::DirectoriesController.sortable? && ::Refinery::Directories::Directory.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Directories"),
                 refinery.directories_admin_directories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Directories"),
                 refinery.directories_admin_directories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
